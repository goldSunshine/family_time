/* pages/cloud/cloud.wxss */
@import "../../common/lib/weui.wxss";
@import "../../assets/iconfont.wxss";

.container {
  /* 控制该组件与同级组件之间的距离 */
  /* 顺序是上，左，下，右 */
  padding: 30px 5px 5px 5px;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  /* background-color:#FFFFFF; */
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}



.content {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  border: none;
}

.location{
  display: flex;
  flex-direction: row;
  border: none;
}
.btn_cancle {
  background-color: #EEEEE0;
  border-radius:5px;
  /* 靠左对齐 */
  margin-left: 0rpx; 
  padding-left: 0rpx;
}

.btn_sure {
  background-color: #66CDAA;
  border-radius:5px;
  /* 靠右对齐 */
  margin-right: 0rpx;
  padding-right: 0rpx;
  
}
.main {
  display: flex;
  flex-direction:initial;
}

.btn_hover_class {
  background-color:#3CB371 !important
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.blank{
  height: 120rpx;
  width:100%;
}